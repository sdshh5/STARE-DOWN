<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaces.FragmentGame">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pastel_green"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/gameCard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#55112299"
        android:backgroundTint="#88112299"
        android:text="CHARACTER CHANGEâ˜…"
        android:textColor="#ff112266"
        android:textSize="25dp"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameCard2" />

    <ImageView
        android:id="@+id/gameCard2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/game_card2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuTitleTextView"
        app:layout_constraintVertical_bias="0.25" />

    <ImageView
        android:id="@+id/gameCard3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="30dp"
        android:src="@drawable/tetris"
        app:layout_constraintBottom_toBottomOf="@+id/main_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuTitleTextView"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/MenuTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="#88ffffff"
        android:backgroundTint="#55ffffff"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/app_name"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>