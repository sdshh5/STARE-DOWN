<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/grandstander_font</item>
    </style>
    <style name="CallActivityTheme" parent="android:Theme.Black">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/grandstander_font</item>
    </style>
    <style name="AppTheme.GreenRipple">
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/pastel_green</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fontFamily">@font/grandstander_font</item>
    </style>

</resources>