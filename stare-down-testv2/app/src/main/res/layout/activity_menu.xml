<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/enter_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/MenuTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#aaffffff"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <ImageButton
        android:id="@+id/SettingButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#00ff0000"
        android:scaleType="centerInside"
        android:src="@drawable/setting_icon"
        app:layout_constraintBottom_toTopOf="@+id/quickStartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuTitleTextView" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Hi, "
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/quickStartButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuTitleTextView"
        app:layout_constraintVertical_bias="0.115" />

    <ImageButton
        android:id="@+id/quickStartButton"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#00ff0000"
        android:scaleType="center"
        android:src="@drawable/play_icon"
        app:layout_constraintBottom_toBottomOf="@+id/main_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuTitleTextView"
        app:layout_constraintVertical_bias="0.266" />

    <Button
        android:id="@+id/generateRoomButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#55ffffff"
        android:text="Make room"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quickStartButton"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/enterRoomButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="12dp"
        android:background="#55ffffff"
        android:text="enter room"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generateRoomButton" />

    <TextView
        android:id="@+id/quickStartTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="quick start"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/quickStartButton"
        app:layout_constraintEnd_toEndOf="@+id/quickStartButton"
        app:layout_constraintStart_toStartOf="@+id/quickStartButton"
        app:layout_constraintTop_toTopOf="@+id/quickStartButton" />

</androidx.constraintlayout.widget.ConstraintLayout>